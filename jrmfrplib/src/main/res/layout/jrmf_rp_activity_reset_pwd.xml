<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/jrmf_rp_background"
              android:fitsSystemWindows="true"
              android:orientation="vertical">

    <com.jrmf360.rplib.widget.ActionBarView
        android:id="@+id/actionbar"
        android:background="@color/jrmf_rp_red"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:content="重置支付密码"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/input_height"
        android:layout_marginTop="@dimen/dimen_16"
        android:background="@color/jrmf_b_white"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/dimen_16">

        <TextView
            style="@style/text_black_16"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="新密码"/>

        <com.jrmf360.tools.view.ClearEditText
            android:id="@+id/et_password"
            style="@style/text_black_16"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="5"
            android:background="@null"
            android:gravity="center_vertical"
            android:hint="请输入6位新支付密码"
            android:inputType="number"
            android:maxLength="6"
            android:paddingRight="@dimen/dimen_16"
            android:password="true"
            android:textColorHint="@color/jrmf_b_color_b7b7b7"/>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/input_height"
        android:layout_marginTop="0.5dp"
        android:background="@color/jrmf_b_white"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/dimen_16">

        <TextView
            style="@style/text_black_16"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="确认新密码"/>

        <com.jrmf360.tools.view.ClearEditText
            android:id="@+id/et_confirm_pwd"
            style="@style/text_black_16"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="5"
            android:background="@null"
            android:gravity="center_vertical"
            android:hint="请重新输入6位新支付密码"
            android:inputType="number"
            android:maxLength="6"
            android:paddingRight="@dimen/dimen_16"
            android:password="true"
            android:textColorHint="@color/jrmf_b_color_b7b7b7"/>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/jrmf_rp_background"
        android:layout_marginTop="@dimen/dimen_8"
        android:padding="@dimen/dimen_16">

        <Button
            android:id="@+id/btn_next"
            android:layout_width="match_parent"
            android:layout_height="@dimen/btn_height"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="@dimen/dimen_16"
            android:background="@drawable/jrmf_rp_bg_gray_round"
            android:text="提交"
            android:textColor="@color/jrmf_b_white"
            android:textSize="16sp"/>
    </LinearLayout>

</LinearLayout>