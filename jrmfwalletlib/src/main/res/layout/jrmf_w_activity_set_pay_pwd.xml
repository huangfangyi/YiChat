<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/jrmf_w_color_bg"
              android:fitsSystemWindows="true"
              android:orientation="vertical"
              tools:context=".ui.SetPayPwdActivity">

    <include layout="@layout/jrmf_w_layout_titlebar"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/item_mywallet_height"
            android:background="@color/jrmf_b_white"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/dimen_16">

            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="支付密码"
                android:textColor="@color/jrmf_w_color_959595"
                android:textSize="14sp"/>

            <com.jrmf360.tools.view.ClearEditText
                android:id="@+id/cet_pwd"
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@null"
                android:gravity="center_vertical"
                android:hint="密码为6位数字"
                android:inputType="numberPassword"
                android:maxLength="6"
                android:paddingRight="@dimen/dimen_8"
                android:textColor="@color/jrmf_b_black"
                android:textColorHint="@color/jrmf_w_color_b7b7b7"
                android:textSize="16sp"/>
        </LinearLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="0.5dip"
            android:background="@color/jrmf_w_color_bg"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/item_mywallet_height"
            android:background="@color/jrmf_b_white"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/dimen_16">

            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="确认支付密码"
                android:textColor="@color/jrmf_w_color_959595"
                android:textSize="14sp"/>

            <com.jrmf360.tools.view.ClearEditText
                android:id="@+id/cet_confirm_pwd"
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@null"
                android:gravity="center_vertical"
                android:hint="请再次输入支付密码"
                android:inputType="numberPassword"
                android:maxLength="6"
                android:paddingRight="@dimen/dimen_8"
                android:textColor="@color/jrmf_b_black"
                android:textColorHint="@color/jrmf_w_color_b7b7b7"
                android:textSize="16sp"/>
        </LinearLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="0.5dip"
            android:background="@color/jrmf_w_color_bg"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="75dp"
            android:background="@color/jrmf_w_color_bg">

            <Button
                android:id="@+id/btn_confirm"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="@dimen/dimen_8"
                android:background="@drawable/jrmf_rp_btn_red"
                android:text="确认提交"
                android:textColor="@color/jrmf_b_white"
                android:textSize="16sp"/>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>