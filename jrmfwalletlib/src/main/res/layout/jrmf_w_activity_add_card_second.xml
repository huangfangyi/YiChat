<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/jrmf_w_color_bg"
                android:fitsSystemWindows="true"
                android:orientation="vertical"
                tools:context=".ui.AddCardSecondActivity">

    <include
        android:id="@+id/titleBar"
        layout="@layout/jrmf_w_layout_titlebar"/>

    <LinearLayout
        android:id="@+id/ll_conent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/titleBar"
        android:layout_marginTop="10dp"
        android:background="@color/jrmf_b_white"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/item_mywallet_height"
            android:background="@color/jrmf_b_white"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/dimen_16">

            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="银行卡号"
                android:textColor="@color/jrmf_w_color_959595"
                android:textSize="14sp"/>

            <!--
                 <com.jrmf360.walletlib.widget.ClearEditText
                android:id="@+id/cet_bankCardNum"
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@null"
                android:gravity="center_vertical"
                android:hint="请输入银行卡号"
                android:inputType="number"
                android:paddingRight="@dimen/base_padding"
                android:textColorHint="@color/color_b7b7b7"
                android:textSize="16sp" />
            -->

            <TextView
                android:id="@+id/tv_bankCardNum"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:textSize="16sp"
                android:textColor="@color/jrmf_b_black"
                tools:text="工商银行(7899)"/>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dip"
            android:layout_marginLeft="@dimen/dimen_16"
            android:background="@color/jrmf_w_color_bg"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/item_mywallet_height"
            android:background="@color/jrmf_b_white"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/dimen_16">

            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="姓名"
                android:textColor="@color/jrmf_w_color_959595"
                android:textSize="14sp"/>

            <com.jrmf360.tools.view.ClearEditText
                android:id="@+id/cet_name"
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@null"
                android:gravity="center_vertical"
                android:hint="请输入姓名"
                android:paddingRight="@dimen/dimen_8"
                android:textColor="@color/jrmf_b_black"
                android:textColorHint="@color/jrmf_w_color_b7b7b7"
                android:textSize="16sp"/>

            <TextView
                android:id="@+id/tv_name"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="刘洪林"
                android:textColor="@color/jrmf_b_black"
                android:textSize="16sp"
                android:visibility="gone"/>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dip"
            android:layout_marginLeft="@dimen/dimen_16"
            android:background="@color/jrmf_w_color_bg"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/item_mywallet_height"
            android:background="@color/jrmf_b_white"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/dimen_16">

            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="身份证号"
                android:textColor="@color/jrmf_w_color_959595"
                android:textSize="14sp"/>

            <com.jrmf360.tools.view.ClearEditText
                android:id="@+id/cet_idCardNum"
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@null"
                android:gravity="center_vertical"
                android:hint="请输入身份证号"
                android:inputType="number"
                android:digits="0123456789xyzXYZ"
                android:paddingRight="@dimen/dimen_8"
                android:textColor="@color/jrmf_b_black"
                android:textColorHint="@color/jrmf_w_color_b7b7b7"
                android:textSize="16sp"/>

            <TextView
                android:id="@+id/tv_idCardNum"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="2137834982894"
                android:textColor="@color/jrmf_b_black"
                android:textSize="16sp"
                android:visibility="gone"/>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dip"
            android:layout_marginLeft="@dimen/dimen_16"
            android:background="@color/jrmf_w_color_bg"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/item_mywallet_height"
            android:layout_marginTop="1dp"
            android:background="@color/jrmf_b_white"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/dimen_16">

            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="手机号"
                android:textColor="@color/jrmf_w_color_959595"
                android:textSize="14sp"/>

            <com.jrmf360.tools.view.ClearEditText
                android:id="@+id/cet_phone"
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@null"
                android:gravity="center_vertical"
                android:hint="银行预留手机号"
                android:inputType="number"
                android:paddingRight="@dimen/dimen_8"
                android:textColor="@color/jrmf_b_black"
                android:textColorHint="@color/jrmf_w_color_b7b7b7"
                android:textSize="16sp"/>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dip"
            android:layout_marginLeft="@dimen/dimen_16"
            android:background="@color/jrmf_w_color_bg"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/item_mywallet_height"
            android:layout_marginTop="1dp"
            android:background="@color/jrmf_b_white"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/dimen_16">

            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="验证码"
                android:textColor="@color/jrmf_w_color_959595"
                android:textSize="14sp"/>

            <com.jrmf360.tools.view.ClearEditText
                android:id="@+id/cet_code"
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@null"
                android:gravity="center_vertical"
                android:hint="请输入验证码"
                android:inputType="number"
                android:maxLength="6"
                android:paddingRight="@dimen/dimen_8"
                android:textColor="@color/jrmf_b_black"
                android:textColorHint="@color/jrmf_w_color_b7b7b7"
                android:textSize="16sp"/>

            <TextView
                android:id="@+id/tv_send_code"
                android:layout_width="90dp"
                android:layout_height="35dp"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="@dimen/dimen_16"
                android:background="@drawable/jrmf_w_shape_code_bg"
                android:gravity="center"
                android:text="发送验证码"
                android:textSize="14sp"
                android:textColor="@color/jrmf_w_color_323232"/>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dip"
            android:background="@color/jrmf_w_color_bg"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/btn_height"
        android:layout_below="@id/ll_conent"
        android:layout_marginLeft="@dimen/dimen_16"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/iv_check"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/jrmf_w_icon_checked"/>

        <TextView
            android:id="@+id/tv_protocol"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/jrmf_w_pay_protocol"
            android:textSize="14sp"
            android:textColor="@color/jrmf_b_title_bar_color"/>
    </LinearLayout>

    <Button
        android:id="@+id/btn_confirm"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="42dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/jrmf_w_selector_round_btn"
        android:text="确认提交"
        android:textColor="@color/jrmf_b_white"
        android:textSize="16sp"/>

</RelativeLayout>