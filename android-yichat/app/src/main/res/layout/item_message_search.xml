<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/re_main"
    android:layout_width="match_parent"
    android:layout_height="64dp"
    android:background="@drawable/list_item_bg_white"
    android:gravity="center_vertical">

    <RelativeLayout
        android:id="@+id/avatar_container"
        android:layout_width="72dp"
        android:layout_height="64dp"
        android:layout_alignParentLeft="true">

        <ImageView
            android:id="@+id/avatar"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="13dp"
            android:scaleType="fitXY"
            android:src="@drawable/default_avatar" />

        <TextView
            android:visibility="invisible"
            android:id="@+id/unread_msg_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="2dp"
            android:layout_marginTop="3dp"
            android:background="@drawable/unread_dot"
            android:gravity="center"
            android:text="7"
            android:textColor="@android:color/white"
            android:textSize="10sp" />

        <TextView
            android:visibility="invisible"
            android:id="@+id/tv_group_tag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/avatar"
            android:layout_alignRight="@id/avatar"
            android:layout_marginRight="3dp"
            android:text="ç¾¤"
            android:textColor="#FFF"
            android:textSize="12sp" />
    </RelativeLayout>

    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@id/avatar_container"
        android:textColor="#353535"
        android:textSize="17sp" />

    <TextView
        android:id="@+id/time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="7dp"
        android:layout_marginTop="12dp"
        android:textColor="#AAAAAA"
        android:textSize="12sp" />

    <ImageView
        android:id="@+id/msg_state"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="5dp"
        android:layout_toRightOf="@id/avatar_container"
        android:src="@drawable/msg_state_fail_resend"
        android:visibility="gone" />

    <TextView
        android:id="@+id/mentioned"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@id/msg_state"
        android:paddingBottom="7dp"
        android:visibility="gone"
        android:paddingTop="7dp"
        android:text="@string/were_mentioned"
        android:textColor="#e84e40"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_toLeftOf="@id/time"
        android:layout_toRightOf="@id/mentioned"
        android:ellipsize="end"
        android:gravity="center|left"
        android:maxLines="1"
        android:paddingBottom="7dp"
        android:paddingTop="7dp"
        android:textColor="#AAAAAA"
        android:textSize="13sp" />

</RelativeLayout>